:$PORT {
    root * /app
    file_server

    # Enable directory browsing for debugging (optional - can remove later)
    # browse

    # Try to serve the exact file, then try index.html in directory, then 404
    try_files {path} {path}/index.html /404.html

    # Handle errors
    handle_errors {
        rewrite * /404.html
        file_server
    }
}
